<source>
    <!-- Variables -->
    <variable>
        <name>avoir-interrogatif</name>
        <source>
            <v>"As-tu"</v>
            <v>"Tu as"</v>
            <v>"T'as"</v>
            <v>"Est-ce que tu as"</v>
            <v>"Avez-vous"</v>
            <v>"Vous avez"</v>
            <v>"Est-ce que vous avez"</v>
        </source>
    </variable>
    <variable>
        <name>camarades</name>
        <source>
            <v>"un" ("camarade" | "de tes camarades")</v>
            <v>"un" ("ami" | "de tes amis")</v>
            <v>"une" ("amie" | "de tes amies")</v>
            <v>"un" ("copain" | "de tes copains")</v>
            <v>"une" ("copine" | "de tes copines")</v>
        </source>
    </variable>

    <!-- Questions -->

    <question>
        <config>
            <id>0</id>
            <theme>1</theme>
        </config>

        <source>
            <v>${avoir-interrogatif} "besoin d'aller aux toilettes?"</v>
            <v>("Dois-tu" | "Tu dois") "aller aux toilettes?"</v>
        </source>
    </question>
    <question>
        <config>
            <id>1</id>
            <theme>0</theme>
        </config>

        <source>
            <v>${avoir-interrogatif} "un probl√®me avec" ${camarades}"?"</v>
        </source>
    </question>
</source>